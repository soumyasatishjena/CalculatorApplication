<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".calculatormodule.CalculationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/inputValueOne"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="input one"
            android:textColorHint="@color/purple_200"
            android:background="@drawable/shape_input_value"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp" />
        <TextView
            android:id="@+id/inputValueTwo"
            android:layout_toEndOf="@id/inputValueOne"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="input two"
            android:textColorHint="@color/purple_200"
            android:background="@drawable/shape_input_value"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/inputValueOne" />
        <TextView
            android:id="@+id/textAdd"
            android:layout_below="@id/inputValueTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:text="Addition"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_button_bcg"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />
        <TextView
            android:id="@+id/textSub"
            android:layout_below="@id/inputValueTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:text="Subtraction"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_button_bcg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />
    </RelativeLayout>
</layout>